#!/usr/bin/env bash
#!/bin/bash
# Script to display information about a domain and its subdomains

# Check that domain argument is provided
if [ $# -lt 1 ]; then
    echo "Usage: $0 <domain> [subdomain]"
    exit 1
fi

# Assign variables
domain=$1
subdomain=$2

# Display domain information
echo "Domain: $domain"
echo "IP Address: $(dig +short $domain)"
echo ""

# Display subdomain information
if [ "$subdomain" != "" ]; then
    echo "Subdomain: $subdomain.$domain"
    echo "IP Address: $(dig +short $subdomain.$domain)"
else
    echo "Subdomains:"
    echo "www.$domain: $(dig +short www.$domain)"
    echo "lb-01.$domain: $(dig +short lb-01.$domain)"
    echo "web-01.$domain: $(dig +short web-01.$domain)"
    echo "web-02.$domain: $(dig +short web-02.$domain)"
fi

